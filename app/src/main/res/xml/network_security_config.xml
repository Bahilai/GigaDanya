<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Доверенные домены для API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.cloud.yandex.net</domain>
        <domain includeSubdomains="true">rest-assistant.api.cloud.yandex.net</domain>
        <domain includeSubdomains="true">llm.api.cloud.yandex.net</domain>
    </domain-config>
</network-security-config>

